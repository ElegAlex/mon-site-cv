---
// src/components/Contact.astro — Phase 2
---

<section id="contact" class="section contact-section">
    <div class="contact-background-shapes">
        <div class="contact-shape shape-a"></div>
        <div class="contact-shape shape-b"></div>
    </div>
    <div class="max-w-6xl mx-auto relative z-10">
        <h2 class="section-heading-dark reveal"><i class="fas fa-paper-plane"></i> Contact</h2>
        <div class="grid md:grid-cols-5 gap-12 items-start">
            <div class="md:col-span-3 reveal">
                <h3 class="contact-subheading">Envoyer un message</h3>
                <form aria-label="Formulaire de contact" id="contactForm" action="https://formspree.io/f/mgvkdnza" method="POST" class="space-y-5">
                    <div class="grid sm:grid-cols-2 gap-5">
                        <div>
                            <label for="name" class="contact-label">Nom</label>
                            <input type="text" id="name" name="name" class="contact-input" required>
                        </div>
                        <div>
                            <label for="email" class="contact-label">Email</label>
                            <input type="email" id="email" name="email" class="contact-input" required>
                        </div>
                    </div>
                    <div>
                        <label for="subject" class="contact-label">Sujet</label>
                        <input type="text" id="subject" name="subject" class="contact-input" required>
                    </div>
                    <div>
                        <label for="message" class="contact-label">Message</label>
                        <textarea id="message" name="message" rows="4" class="contact-input" required></textarea>
                    </div>
                    <button type="submit" class="contact-submit-button">Envoyer <i class="fas fa-paper-plane ml-2"></i></button>
                </form>
            </div>
            <div class="md:col-span-2 mt-8 md:mt-0 reveal">
                <h3 class="contact-subheading">Coordonnées</h3>
                <div class="contact-details-list">
                    <div class="contact-detail-item">
                        <i class="fas fa-map-marker-alt"></i>
                        <div><h4>Localisation</h4><p>Nanterre (92), Île-de-France</p></div>
                    </div>
                    <div class="contact-detail-item">
                        <i class="fas fa-phone"></i>
                        <div><h4>Téléphone</h4><p>06 65 57 64 78</p></div>
                    </div>
                    <div class="contact-detail-item">
                        <i class="fas fa-envelope"></i>
                        <div><h4>Email</h4><a href="mailto:contact@alexandre-berge.fr">contact@alexandre-berge.fr</a></div>
                    </div>
                    <div class="contact-detail-item">
                        <i class="fab fa-linkedin-in"></i>
                        <div><h4>LinkedIn</h4><a href="https://www.linkedin.com/in/bergealexandre" target="_blank" rel="noopener noreferrer">bergealexandre</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
